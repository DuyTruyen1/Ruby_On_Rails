<div class="container mt-4">
  <h1 class="mb-4">Danh sách người dùng</h1>

  <div class="mb-3">
    <%= link_to 'Thêm người dùng mới', new_user_path, class: 'btn btn-primary' %>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead class="table-dark">
        <tr>
          <th>Tên</th>
          <th>Email</th>
          <th>Số bài viết</th>
          <th>Thao tác</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.microposts.count %></td>
            <td>
              <%= link_to 'Xem', user, class: 'btn btn-info btn-sm' %>
              <%= link_to 'Sửa', edit_user_path(user), class: 'btn btn-warning btn-sm' %>
              <%= button_to 'Xóa', user_path(user), method: :delete, data: { turbo_confirm: 'Bạn có chắc chắn muốn xóa?' }, class: 'btn btn-danger btn-sm', form_class: 'd-inline' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>