<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <h2>Chi tiết bài viết</h2>
    </div>
    <div class="card-body">
      <div class="mb-4">
        <h5>Người đăng:</h5>
        <p><%= link_to @micropost.user.name, user_path(@micropost.user) %></p>
      </div>

      <div class="mb-4">
        <h5>Nội dung:</h5>
        <p class="lead"><%= @micropost.content %></p>
      </div>

      <div class="mb-4">
        <h5>Thời gian đăng:</h5>
        <p><%= @micropost.created_at.strftime("%d/%m/%Y %H:%M") %></p>
      </div>
    </div>
    <div class="card-footer">
      <%= link_to 'Sửa', edit_micropost_path(@micropost), class: 'btn btn-warning' %>
      <%= link_to 'Quay lại', microposts_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>